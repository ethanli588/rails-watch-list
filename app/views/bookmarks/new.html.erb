<h1>Add a a new movie to the list <strong><%= @list.name %></h1></strong>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :movie, collection: @movies.map(&:title), input_html: {multiple: true, data: {controller: 'select2', select2_options_value: {tags: true}}} %>
  <%= f.input :comment %>
  <%= f.button :submit %>
<% end %>
